---
import Navbar from "../components/navbar/Navbar.tsx";
import Layout from "../layouts/Layout.astro";
---

<Layout title="Kazyel">
  <Navbar client:load />

  <section
    class="relative flex min-h-screen w-full max-xl:fixed  max-sm:px-8 flex-col items-center justify-center overflow-hidden"
  >
    <div
      transition:animate="fade"
      class="flex flex-col items-center text-center leading-snug"
    >
      <h1 class="mb-10 text-[4rem] max-sm:text-[2.75rem] max-lg:text-[3rem] font-extrabold text-acc-yellow">
        <span
          class="bg-gradient-to-l from-acc-yellow to-acc-yellow-2 bg-clip-text text-transparent"
          >Hey, web wanderer!
        </span>
      </h1>
      <h2 class="text-3xl sm:mb-8 sm:text-[3.75rem] font-light text-off-w">
        I'm Mateus Mascarelo,
      </h2>
      <h2
        class="text-[4rem] max-sm:text-3xl max-md:text-4xl font-extrabold text-off-w transition-all duration-300 hover:drop-shadow-[0px_0px_25px_#f3e5d755]"
      >
        A Front-end Web Developer!
      </h2>
      <div
        class="mt-24 flex items-center justify-center text-center text-off-w"
      >
        <a
          href="/portfolio/about"
          id="journey"
          class="ease flex cursor-pointer gap-2 text-xl font-semibold transition-all duration-300"
        >
          So, let's start this journey?<svg
            id="arrowSvg"
            xmlns="http://www.w3.org/2000/svg"
            fill="none"
            viewBox="0 0 24 24"
            stroke-width="1.15"
            stroke="currentColor"
            class="ease h-7 w-7 cursor-pointer text-acc-yellow transition-all duration-300"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              d="M6 12L3.269 3.126A59.768 59.768 0 0121.485 12 59.77 59.77 0 013.27 20.876L5.999 12zm0 0h7.5"
            ></path>
          </svg>
        </a>
      </div>
    </div>
  </section>
</Layout>

<script type="module">
  const arrowSvg = document.querySelector("#arrowSvg");
  const journeyStart = document.querySelector("#journey");

  journeyStart?.addEventListener("mouseover", (e) => {
    arrowSvg?.classList.add("translate-x-1");
    arrowSvg?.classList.add("fill-acc-yellow");

    e.stopPropagation();
  });

  journeyStart?.addEventListener("mouseleave", (e) => {
    arrowSvg?.classList.remove("translate-x-1");
    arrowSvg?.classList.remove("fill-acc-yellow");

    e.stopPropagation();
  });
</script>
