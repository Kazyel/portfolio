---
import { Image } from "astro:assets";
import { ViewTransitions } from "astro:transitions";
import Kanagawa from "../assets/kanagawa.png";

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/portfolio/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <ViewTransitions />
  </head>

  <body>
    <main class="relative flex min-h-screen flex-col items-center font-mont">
      <slot />
      <Image
        src={Kanagawa}
        alt="Kanagawa Wave"
        class="absolute bottom-0 -z-10 w-full bg-cover opacity-20 mix-blend-multiply grayscale max-md:hidden"
        quality={100}
        width={1920}
        height={100}
      />
    </main>
  </body>
</html>

<style is:global>
  @import url("https://fonts.googleapis.com/css2?family=Montserrat:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&display=swap");

  :root {
    --accent-red: #d54242;
    --accent-yellow: #d58430;
    --base-color: #f3e5d7;
    --darkest: #000;
    --lightest: #fff;
    --dark: #1f1a15;
  }
  html {
    font-family: system-ui, sans-serif;
    background-color: #1f1a15;
  }
</style>
